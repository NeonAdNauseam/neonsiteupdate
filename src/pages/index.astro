---
import MainLayout from '../layouts/MainLayout.astro'
import MobileLayout from '../layouts/MobileLayout.astro'
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link rel="stylesheet" href="/styles/global.css" />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"
      defer
    ></script>
    <title>Neon's Konbini</title>
  </head>

  <body>
    <div class="site site--desktop">
      <MainLayout />
    </div>

    <div class="site site--mobile">
      <MobileLayout />
    </div>
  </body>
</html>

<style>
  :root {
    --mobile-breakpoint: 768px;
  }

  body {
    margin: 0;
  }

  .site {
    /* important: let each layout control its own scrolling */
    width: 100%;
    height: 100%;
  }

  .site--mobile {
    display: none;
  }

  @media (max-width: 768px) {
    .site--desktop {
      display: none;
    }

    .site--mobile {
      display: block;
    }
  }
</style>
