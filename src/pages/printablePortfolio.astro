<script>
// @ts-nocheck
/* Config tokens */
/**
 * @typedef {Object} ProjectLink
 * @property {string} url
 * @property {string} [label]
 * @property {string} [type]
 */
/**
 * @typedef {Object} Project
 * @property {string} [projectTitle]
 * @property {string} [summary]
 * @property {string} [client]
 * @property {string} [team]
 * @property {string} [dates]
 * @property {string} [process]
 * @property {string} [changeList]
 * @property {string} [toolList]
 * @property {string} [thumbnailUrl]
 * @property {string[]} [imageUrls]
 * @property {ProjectLink[]} [links]
 */
const apiUrl =
  "https://raw.githubusercontent.com/NeonAdNauseam/Portfolio-API-and-Images/main/portfolioAPI.json";

const maxImagesPerProject = 3;          // primary image + up to 2 secondary
const useThumbnailAsPrimary = true;     // prefer thumbnail if present
const projectsContainerId = "projects";

/* Helpers */
/**
 * Create an element with optional class and text.
 * @param {string} tag
 * @param {any} [className]
 * @param {any} [text]
 * @returns {HTMLElement}
 */
function createElement(tag, className = undefined, text = undefined) {
  const el = /** @type {HTMLElement} */ (document.createElement(tag));
  if (className) {
    el.className = className;
  }
  if (text) {
    el.textContent = text;
  }
  return el;
}

/**
 * @param {any} value
 * @returns {string}
 */
function normalizeText(value) {
  if (!value) return "";
  return String(value).trim();
}

/* Build a single project article */
/**
 * @param {Project} project
 * @returns {HTMLElement}
 */
function renderProject(project) {
  const article = createElement("article", "project");

  /* Header */
  const header = createElement("header", "project__header");
  const title = createElement("h2", "project__title", project.projectTitle || "Untitled project");
  header.appendChild(title);

  const meta = createElement("p", "project__meta");

  const dateText = normalizeText(project.dates);
  if (dateText) {
    const dateSpan = createElement("span");
    dateSpan.innerHTML = `<span class="project__meta-label">Dates:</span> ${dateText}`;
    meta.appendChild(dateSpan);
  }

  const clientText = normalizeText(project.client);
  if (clientText) {
    const clientSpan = createElement("span");
    clientSpan.innerHTML = `<span class="project__meta-label">Client:</span> ${clientText}`;
    meta.appendChild(clientSpan);
  }

  const teamText = normalizeText(project.team);
  if (teamText) {
    const teamSpan = createElement("span");
    teamSpan.innerHTML = `<span class="project__meta-label">Collaborators:</span> ${teamText}`;
    meta.appendChild(teamSpan);
  }

  if (meta.childNodes.length > 0) {
    header.appendChild(meta);
  }

  article.appendChild(header);

  /* Main grid */
  const grid = createElement("div", "project__grid");

  /* Images column */
  const imagesColumn = createElement("figure", "project__images");

  const thumbnailCandidate = normalizeText(project.thumbnailUrl);
  const imageUrls = Array.isArray(project.imageUrls) ? project.imageUrls.filter(Boolean) : [];

  let primaryImage = null;
  if (useThumbnailAsPrimary && thumbnailCandidate) {
    primaryImage = thumbnailCandidate;
  } else if (imageUrls.length > 0) {
    primaryImage = imageUrls[0];
  }

  const secondaryImages = imageUrls
    .filter(
      /** @param {string} url */
      (url) => url !== primaryImage
    )
    .slice(0, Math.max(0, maxImagesPerProject - 1));

  if (primaryImage) {
    const mainImg = createElement("img", "project__image-main");
    mainImg.src = primaryImage;
    mainImg.alt = `${project.projectTitle} main image`;
    imagesColumn.appendChild(mainImg);
  }

  if (secondaryImages.length > 0) {
    const row = createElement("div", "project__image-row");
    secondaryImages.forEach(
      /** @param {string} url @param {number} index */
      (url, index) => {
      const img = createElement("img", "project__image-secondary");
      img.src = url;
      img.alt = `${project.projectTitle} detail ${index + 1}`;
      row.appendChild(img);
    });
    imagesColumn.appendChild(row);
  }

  grid.appendChild(imagesColumn);

  /* Text column */
  const textColumn = createElement("div", "project__text");

  const summaryText = normalizeText(project.summary);
  if (summaryText) {
    const summary = createElement("p", "project__summary", summaryText);
    textColumn.appendChild(summary);
  }

  const toolsText = normalizeText(project.toolList);
  if (toolsText) {
    const tools = createElement("p", "project__tools");
    tools.innerHTML = `<span class="project__label">Tools:</span> ${toolsText}`;
    textColumn.appendChild(tools);
  }

  const processText = normalizeText(project.process);
  if (processText) {
    const process = createElement("p", "project__details");
    process.innerHTML = `<span class="project__label">Process:</span> ${processText}`;
    textColumn.appendChild(process);
  }

  const changeListText = normalizeText(project.changeList);
  if (changeListText) {
    const changes = createElement("p", "project__details");
    changes.innerHTML = `<span class="project__label">Notes:</span> ${changeListText}`;
    textColumn.appendChild(changes);
  }

  /* Links row */
  if (Array.isArray(project.links) && project.links.length > 0) {
    const list = createElement("ul", "project__links");

    project.links.forEach(
      /** @param {ProjectLink} link */
      (link) => {
        if (!link || !link.url) return;

        const item = createElement("li", "project__link-item");
        const typeLabel = normalizeText(link.type);
        if (typeLabel) {
          const pill = createElement("span", "project__link-pill", typeLabel.toUpperCase());
          item.appendChild(pill);
        }

        const a = createElement("a", "project__link", link.label || link.url);
        a.href = link.url;
        a.target = "_blank";
        a.rel = "noreferrer noopener";

        item.appendChild(a);
        list.appendChild(item);
      }
    );

    textColumn.appendChild(list);
  }

  grid.appendChild(textColumn);
  article.appendChild(grid);

  return article;
}

/* Fetch and render portfolio */
function renderPortfolio() {
  const container = document.getElementById(projectsContainerId);
  if (!container) return;

  fetch(apiUrl)
    .then((response) => {
      if (!response.ok) {
        throw new Error("Could not load portfolio API");
      }
      return response.json();
    })
    .then(
      /** @param {Project[]} projects */
      (projects) => {
        if (!Array.isArray(projects)) return;

        projects.forEach(
          /** @param {Project} project */
          (project) => {
            const article = renderProject(project);
            container.appendChild(article);
          }
        );
      }
    )
    .catch((error) => {
      console.error(error);
      const errorMessage = createElement(
        "p",
        "project-error",
        "There was a problem loading the portfolio data."
      );
      container.appendChild(errorMessage);
    });
}

/* Print button hook */
function setupPrintButton() {
  const button = document.querySelector(".print-button");
  if (!button) return;

  button.addEventListener("click", function () {
    window.print();
  });
}

/* Init */
document.addEventListener("DOMContentLoaded", function () {
  renderPortfolio();
  setupPrintButton();
});
 </script>