---
export interface Props {
  current?: 'home' | 'printable'
}

const { current = 'home' } = Astro.props

const isHome = current === 'home'
const isPrintable = current === 'printable'
---

<nav class="site-nav" aria-label="Primary">
  <div class="site-nav__inner">
    {isHome ? (
      <span
        class="site-nav__link site-nav__link--active"
        aria-current="page"
      >
        Home
      </span>
    ) : (
      <a class="site-nav__link" href="/">
        Home
      </a>
    )}

    {isPrintable ? (
      <span
        class="site-nav__link site-nav__link--active"
        aria-current="page"
      >
        Printable portfolio
      </span>
    ) : (
      <a class="site-nav__link" href="/printablePortfolio">
        Printable portfolio
      </a>
    )}
  </div>
</nav>

<style>
:root {
  --nav-height: 3rem;
  --nav-bg: rgba(0, 0, 0, 0.72);
  --nav-border: 1px solid rgba(255, 255, 255, 0.2);
  --nav-radius: 999px;
  --nav-shadow: 0 0.7rem 1.6rem rgba(0, 0, 0, 0.55);
  --nav-font-size: 0.9rem;
  --nav-padding-x: 1.2rem;
  --nav-padding-y: 0.35rem;
  --nav-gap: 1.25rem;
  --nav-link-color: #f7f7ff;
  --nav-link-muted: rgba(247, 247, 255, 0.65);
  --nav-link-active-bg: rgba(255, 255, 255, 0.14);
  --nav-link-radius: 999px;
  --nav-z-index: 9999;
}

.site-nav {
  position: fixed;
  top: 1rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: var(--nav-z-index);
  pointer-events: none;

  .site-nav__inner {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--nav-padding-y) var(--nav-padding-x);
    border-radius: var(--nav-radius);
    border: var(--nav-border);
    background: var(--nav-bg);
    box-shadow: var(--nav-shadow);
    gap: var(--nav-gap);
    pointer-events: auto;
    backdrop-filter: blur(10px);
  }

  .site-nav__link {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.25rem 0.75rem;
    border-radius: var(--nav-link-radius);
    font-size: var(--nav-font-size);
    text-decoration: none;
    color: var(--nav-link-muted);
    cursor: pointer;
    border: none;
    outline: none;
    transition:
      background-color 0.12s ease,
      color 0.12s ease,
      transform 0.12s ease;
  }

  .site-nav__link:hover {
    background-color: rgba(255, 255, 255, 0.08);
    color: var(--nav-link-color);
    transform: translateY(-1px);
  }

  .site-nav__link:active {
    transform: translateY(0);
  }

  .site-nav__link--active {
    background-color: var(--nav-link-active-bg);
    color: var(--nav-link-color);
    cursor: default;
  }
}

@media print {
  .site-nav {
    display: none;
  }
}
</style>
