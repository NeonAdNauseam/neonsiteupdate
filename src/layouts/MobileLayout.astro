---
import StoreExteriorMobile from '../components/mobile/StoreExteriorMobile.astro'
import Face4Mobile from '../components/mobile/Face4Mobile.astro'
---



<main class="mobile-konbini">
  <div class="mobile-konbini__inner">
    <section class="mobile-konbini__section mobile-konbini__section--exterior">
      <StoreExteriorMobile />
    </section>

    <section class="mobile-konbini__section mobile-konbini__section--face4">
      <Face4Mobile />
    </section>
  </div>
</main>

<style>


/* Outer mobile scroll experience */
.mobile-konbini {
  min-height: 100vh;
  width: 100%;
  background: var(--mobile-bg);
  display: flex;
  justify-content: center;

  .mobile-konbini__inner {
    width: 100%;
    max-width: var(--mobile-max-width);
    padding-inline: var(--mobile-padding-x);
    padding-block: var(--mobile-padding-top) var(--mobile-padding-bottom);
    display: flex;
    flex-direction: column;
    gap: var(--mobile-section-gap);

    .mobile-konbini__section {
      min-height: 100vh;
      display: flex;
      align-items: stretch;

      > * {
        flex: 1;
      }
    }
  }
}

/* Face 4 mobile panel (option 1 overrides) */
.face-inner {
  width: 100%;          /* was 100vw */
  min-height: 100vh;    /* was height: 100vh */
  overflow: hidden;
  position: relative;
}

/* Face 4 parallax container sits behind everything, fills the face */
.parallax-scene-4 {
  position: absolute;
  inset: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: none;
  z-index: 0;
}

.parallax-scene {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  perspective: 800px;
}

.scene-canvas {
  width: 1280px;
  height: 720px;
  position: relative;
  transform: scale(calc(100vw / 1280));
  transform-origin: top left;
}

.layer {
  position: absolute;
  pointer-events: none;
  transition: transform 0.1s ease-out;
  will-change: transform;
}

/* Background fills the whole canvas, at the very back */
.layer-bg {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  object-fit: cover;
}

/* Shelf in front of the background */
.layer-wall {
  width: 154.9%;
  top: -41.61%;
  left: -34.5%;
  z-index: 1;
}

.layer-avatar {
  width: 31.25%;
  top: 34.72%;
  left: 53.13%;
  z-index: 2;
}

.layer-bubble {
  width: 25%;
  top: 13.89%;
  left: 66.41%;
  z-index: 3;
}

.layer-counter {
  width: 84.22%;
  top: 71.28%;
  left: 6.28%;
  z-index: 4;
}

/* Printable portfolio + hub buttons overlay */
.portfolio-print-link {
  position: absolute;
  top: 50%;
  left: 7%;
  transform: translateY(-50%);
  z-index: 10;
  pointer-events: auto;
  display: flex;
  flex-direction: column;
  align-items: flex-start;

  .portfolio-print-link__buttons {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .portfolio-print-link__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--print-btn-padding-y) var(--print-btn-padding-x);
    border-radius: var(--print-btn-radius);
    border: var(--print-btn-border);
    background: var(--print-btn-bg);
    color: var(--print-btn-text);
    font-size: var(--print-btn-font-size);
    letter-spacing: 0.12em;
    text-transform: uppercase;
    text-decoration: none;
    box-shadow: var(--print-btn-shadow);
    cursor: pointer;
    pointer-events: auto;
    transition:
      background-color 0.12s ease,
      transform 0.12s ease,
      box-shadow 0.12s ease;

    &:hover {
      background: var(--print-btn-bg-hover);
      transform: translateY(-1px);
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.45);
    }

    &:active {
      transform: translateY(0);
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.35);
    }
  }
}
</style>

